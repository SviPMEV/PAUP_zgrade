@{
    ViewBag.Title = "Administrator - index";
}

@if (Session["email"] != null && Session["email"].ToString() == "upravitelj_zgradara@gmail.com") {
    <div class="jumbotron container">
        <h3>Dobrodošao upravitelju</h3>
        <p class="lead">Ova stranica sluzi za administraciju stanara i zgrada, kao i za postavljanje obavijesti</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <img src="~/Content/img/admin_ind/tenants.jpg" width="360" height="270" />
            <h2>Lista stanara </h2>
            <p>
                Dodajte, obrisite ili samo pregledajte stanare
            </p>
            <p><a class="btn btn-danger" href="~/stanars">Lista &raquo;</a></p>
        </div>

        <div class="col-md-4">
            <img src="~/Content/img/admin_ind/zgrade_umbrella.jpg" width="360" height="270" />
            <h2>Lista zgrada </h2>
            <p>
                Dodajte, obrisite ili samo pregledajte zgrade
            </p>
            <p><a class="btn btn-danger" href="~/zgradas">Lista  &raquo;</a></p>
        </div>

        <div class="col-md-4">
            <img src="~/Content/img/admin_ind/notices.jpg" width="360" height="270" />

            <h2>Obavijesti </h2>
            <p>
                Dodajte, obrisite ili samo pregledajte obavijesti za stanare
            </p>
            <p><a class="btn btn-danger" href="~/obavijestis">Lista  &raquo;</a></p>
        </div>
    </div>
<br /> <br />
<div class="row">
    <div class="col-md-4">
        <img src="~/Content/img/admin_ind/poruke_icon.png" width="360" height="270" />
        <h2>Pristigle poruke</h2>
        <p>
            Pregledajte poruke s zahtjevima, sugestijama i dr. koje su vam poslali stanari
        </p>
        <p><a class="btn btn-danger" href="~/porukas">Poruke  &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <img src="~/Content/img/admin_ind/financije_2.jpg" width="360" height="270" />
        <h2>Zgradar.Finance</h2>
        <p>
            Uređujte financije zgrade
        </p>
        <p><a class="btn btn-danger" href="/financijes/ListaFinancija">Financije &raquo;</a></p>
    </div>
</div>
}
else { 

<div class="jumbotron container">
    <h3>Stranica za upravitelja</h3>
    <p class="lead">Poštovani, ova stranica je samo za upravitelja zgrada. Ukoliko ste vi to upravitelju, molim prijavite se!</p>
</div>}